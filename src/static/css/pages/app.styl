.for-app
	img-size = 120px
	.tab-page
		margin-bottom 0
	.img-upload
		margin-right space * 2
	.pre-view, .add-img
		width img-size
		height img-size
	.pre-view
		position relative
		.icons-close
			background color-error
			border-radius 10px
			padding 2px
			font-size 12px
			color bg-color-white
			cursor pointer
			border 2px solid #fff
			position absolute
			right -8px
			top -8px
		img
			width 100%
			height 100%
	.add-img
		display table-cell
		cursor pointer
		text-align center
		vertical-align middle
		background-color bg-color-light
		.el-icon-plus
			font-size 60px
			color text-color-light
		.img-file
			display none
	.img-require
		height img-size
		margin-left img-size + space * 2
		line-height 1.5
		position relative
		p
			padding-bottom 0.5em
		.bottom
			position absolute
			bottom -4px
			.el-checkbox__label
				color text-color-light
	.drag-over
		td
			background #e4e8fb