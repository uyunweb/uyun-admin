
.hljs
	font-family Fira Mono,monospace
	font-size 1em
	line-height 1.8em
	tab-size 4
	
.sxui_demo
	background #fff
	padding 20px 30px
	min-height 400px
.sxui_demo > h2
	color #000
	font-weight 100
	line-height 2em
	border-bottom 1px solid #ccc
.sxui_demo > h3
	color #333
	font-weight 600
	margin 25px 0 10px
.sxui_demo > p
	font-size 13px
	color #777
	padding 5px 0
.sxui_demo > hr
	display block
	width 100%
	height 20px
	border 0
	background #f3f3f3
	margin-top 20px
	margin-bottom 20px
	border-left 30px solid #f3f3f3
	border-right 30px solid #f3f3f3
	margin-left -30px
	&.line
		height 1px
		margin-top 2px
		margin-bottom 10px
		background #eee
		border-left 0
		border-right 0
		margin-left 0
.sxui_demo > ul
	li
		padding 0 20px

